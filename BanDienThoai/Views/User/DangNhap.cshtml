@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group input[type="tel"],
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

    button {
        background-color: #be1e2d;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        button:hover {
            opacity: 0.8;
        }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    button {
        background-color: #be1e2d;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        button:hover {
            opacity: 0.8;
        }

    .noti {
        color: #be1e2d;
    }
</style>
<div>
    <form action="/User/DangNhap" method="post" onsubmit="return validateForm()">
        <div class="container">
            <h2>Đăng nhập</h2>
            <label for="txtMail"><b>Email</b></label>
            <input type="text" id="txtMail" name="txtMail" placeholder="Email" required />

            <label for="txtPW"><b>Mật khẩu</b></label>
            <input type="password" id="txtPW" name="txtPW" placeholder="Mật khẩu" required />
            <span class="toggle-password" onclick="togglePassword()">Hiện mật khẩu</span>

            <button type="submit">Login</button>
        </div>

        <div class="container">
            <span class="psw"><a href="#">Forgot password?</a></span>
        </div>
    </form>
</div>
<script>
    function validateForm() {
        var email = document.getElementById('txtMail').value;
        var password = document.getElementById('txtPW').value;

        if (email.trim() === '') {
            alert('Vui lòng nhập địa chỉ email.');
            return false;
        }

        var emailRegex = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        if (!emailRegex.test(email)) {
            alert('Email không hợp lệ.');
            return false;
        }

        if (password.trim() === '') {
            alert('Vui lòng nhập mật khẩu.');
            return false;
        }
        var passwordRegex = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@@$!%*#?&])[A-Za-z\d@@$!%*#?&]{8,}$/;
        if (!passwordRegex.test(password)) {
            alert('Mật khẩu không đạt định dạng yêu cầu. Mật khẩu cần ít nhất 8 ký tự, bao gồm chữ cái, số và ký tự đặc biệt.');
            return false;
        }
        return true;
    }
    function togglePassword() {
        var passwordInput = document.getElementById("txtPW");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
</script>
    
