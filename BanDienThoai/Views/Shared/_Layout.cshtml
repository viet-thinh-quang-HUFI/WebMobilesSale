<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
        #form {
            margin-top: 17px;
            background-color: white;
            width: 300px;
            height: 44px;
            border-radius: 5px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        input {
            all: unset;
            font: 16px system-ui;
            color: black;
            height: 100%;
            width: 100%;
            padding: 6px 10px;
        }

        .bar {
            background-color: #be1e2d;
        }

        .m {
            margin-top: 17px;
        }

        .lienket {
            text-decoration: none;
            color: black;
        }

            .lienket:hover {
                color: #be1e2d;
            }

        .p {
            margin-bottom: 0;
        }
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <header class="bar">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <a href="/User/Index"><img src="https://didongviet.vn/svg/Header/logowhite.svg" width="250" height="80" /></a>
                </div>
                <div class="col-3">
                    <form id="form">
                        <input type="search" id="#" name="name" placeholder="Siêu phẩm iPhone 15 Series">
                        <button type="submit" class="btn mx-2">
                            <svg width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </button>
                    </form>
                </div>
                <div class="col-6">
                    <div class="container m">
                        <div class="row">
                            <div class="col">
                                <a href="#" style="text-decoration: none;">
                                    <div class="row">
                                        <div class="col-3">
                                            <img src="https://didongviet.vn/svg/Header/phone.svg" alt="Di Động Việt - Đặt hàng" width="25" height="25">
                                        </div>
                                        <div class="col-9">
                                            <p class="text-white">Đặt hàng 1800.6018</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col">
                                <a href="#" style="text-decoration: none;">
                                    <div class="row">
                                        <div class="col-3">
                                            <img src="https://didongviet.vn/svg/Header/location.svg" alt="Cửa hàng gần bạn" width="25" height="25">
                                        </div>
                                        <div class="col-9">
                                            <p class="text-white">Cửa hàng gần bạn</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col">
                                @{
                                    if (Session["tenTK"] != null)
                                    {
                                        <a href="/User/LSMuaHang" style="text-decoration: none;">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="https://didongviet.vn/svg/Header/package.svg" alt="Tra cứu đơn hàng" width="25" height="25">
                                                </div>
                                                <div class="col-9">
                                                    <p class="text-white">Tra cứu đơn hàng</p>
                                                </div>
                                            </div>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/User/DangNhap" style="text-decoration: none;">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="https://didongviet.vn/svg/Header/package.svg" alt="Tra cứu đơn hàng" width="25" height="25">
                                                </div>
                                                <div class="col-9">
                                                    <p class="text-white">Tra cứu đơn hàng</p>
                                                </div>
                                            </div>
                                        </a>
                                    }
                                }
                            </div>
                            <div class="col-2">
                                <a href="/User/XemGioHang" style="text-decoration: none;">
                                    <div class="row">
                                        <div class="col-3">
                                            <img src="https://didongviet.vn/svg/Header/cart.svg" alt="Giỏ hàng" width="25" height="25">
                                        </div>
                                        <div class="col-9">
                                            <p class="text-white">Giỏ hàng</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-3">
                                <a href="#" style="text-decoration: none;">
                                    <div class="row">
                                        <div class="col-3">
                                            <img src="https://didongviet.vn/svg/Header/user.svg" alt="Đăng nhập Đăng ký" width="25" height="25">
                                        </div>
                                        <div class="col-9">
                                            @{
                                                if (Session["tenTK"] != null)
                                                {
                                                    <a href="/User/ThongTin/?mail=@Session["mail"]"><span>Chào bạn, @Session["tenTK"]</span></a>
                                                    <a href="/User/DangXuat"><b>Đăng xuất</b></a>
                                                }
                                                else
                                                {
                                                    <a href="/User/DangNhap"><b>Đăng nhập</b></a><br />
                                                    <a href="/User/DangKy"><b>Đăng ký</b></a>
                                                }
                                            }
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            @RenderBody()

        </div>
    </main>

    <footer style="background-color:#F0F2F5">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <div>
                        <p style="color: #be1e2d;" class="p"><b>Hỗ trợ khách hàng</b></p>
                    </div>
                    <div>
                        <a class="lienket" href="#">Danh sách cửa hàng</a>
                    </div>
                    <div>
                        <a class="lienket" href="#">Mua trả góp</a>
                    </div>
                    <div>
                        <a class="lienket" href="#">Tra cứu điểm thành viên</a>
                    </div>
                    <div>
                        <a class="lienket" href="#">Tuyển dụng mới nhất</a>
                    </div>
                </div>
                <div class="col-3">
                    <div>
                        <p style="color: #be1e2d;" class="p"><b>Chính sách</b></p>
                    </div>
                    <div>
                        <a class="lienket" href="#">Chính sách bảo hành</a>
                    </div>
                    <div>
                        <a class="lienket" href="#">Chính sách đổi trả</a>
                    </div>
                    <div>
                        <a class="lienket" href="#">Chính sách bán hàng</a>
                    </div>
                    <div>
                        <a class="lienket" href="#">Xem thêm</a>
                    </div>
                </div>
                <div class="col-3">
                    <div>
                        <p style="color: #be1e2d;" class="p"><b>Liên hệ</b></p>
                    </div>
                    <div>
                        <p class="p">Kỹ thuât: <b><a style="text-decoration: none;" href="tel:18006018">1800.6018</a></b>(08:30 – 21:30)</p>
                    </div>
                    <div>
                        <p class="p">Bảo hành:<b> <a style="text-decoration: none;" href="tel:18006018">1800.6018</a></b>(08:30 – 21:30)</p>
                    </div>
                    <div>
                        <p class="p">Góp ý:<b> <a style="text-decoration: none;" href="tel:18006018">1800.6018</a></b>(08:30 – 21:30)</p>
                    </div>
                    <div>
                        <p class="p">Gọi mua:<b> <a style="text-decoration: none;" href="tel:18006018">1800.6018</a></b>(08:30 – 21:30)</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="row">
                        <div class="col-3">
                            <a href="https://www.facebook.com/didongviet/">
                                <img src="https://didongviet.vn/images/footer/fb.svg" alt="di động viêt" width="16" height="16">
                                <p>500k Fans</p>
                            </a>
                        </div>
                        <div class="col-3">
                            <a href="https://zalo.me/2858385037676592618">
                                <img src="https://didongviet.vn/images/footer/zl.svg" alt="di động viêt" width="16" height="16">
                                <p>500k Fans</p>
                            </a>
                        </div>
                        <div class="col-3">
                            <a href="https://www.youtube.com/user/didongvietnam">
                                <img src="http://didongviet.vn/images/footer/yt.svg" alt="di động viêt" width="16" height="16">
                            <p>500k Fans</p>
                            </a>
                        </div>
                        <div class="col-3">
                            <a href="https://www.tiktok.com/didongviet.official">
                                <img src="https://didongviet.vn/images/footer/tik.svg" alt="di động viêt" width="16" height="16">
                                <p>500k Fans</p>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <p class="p"><b>Đối tác Di Động Việt</b></p>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <img src="https://didongviet.vn/svg/statics/vertu.svg" />
                        </div>
                        <div class="col-4">
                            <img src="https://didongviet.vn/svg/statics/vdd.svg" />
                        </div>
                        <div class="col-4">
                            <img src="https://didongviet.vn/svg/statics/techmag-10.svg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
